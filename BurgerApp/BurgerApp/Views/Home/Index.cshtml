@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div>
        <h1>Welcome to Sloppy Joe's Burger Emporium</h1>
    </div>
    <br />
    <br />
    <br />
    <div class="container text-center">
        <div class="row" >
            <div class="col">
                <h4>Most Popular Burger:</h4>
                <br />
                <div class="fs-1">
                    <h2><b class="fs-1" >@ViewBag.MostPurchasedBurger.Name</b></h2>
                    <div><p>*pic goes here</p></div>
                    <b>FOR ONLY @ViewBag.MostPurchasedBurger.Price$</b>
                    <br />
                    <br />
                    <p>
                        Fries:
                        @{
                            if (ViewBag.MostPurchasedBurger.HasFries)
                            {
                                <span style="color: green;">YES</span>
                            }
                            else
                            {
                                <span style="color: red;">NO</span>

                            }
                        }
                    </p>
                   <p>
                        Vegan:
                        @{
                            if (ViewBag.MostPurchasedBurger.IsVegan)
                            {
                                <span style="color: green;">YES</span>
                            }
                            else
                            {
                                <span style="color: red;">NO</span>

                            }
                        }
                   </p>
                    <p>
                        Vegetarian:
                        @{
                            if (ViewBag.MostPurchasedBurger.IsVegetarian)
                            {
                                <span style="color: green;">YES</span>
                            }
                            else
                            {
                                <span style="color: red;">NO</span>

                            }
                        }

                    </p>
                   
                </div>
            </div>
            <div class="col">
                <h4>Number of Orders Serviced:</h4>
                <br />
                <div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <h2><b class="fs-1">A GRAND TOTAL OF</b></h2>
                    <b class="fs-1"> (((((@ViewBag.NumberOfOrdersServiced))))) </b>
                </div>
            </div>
            <div class="col">
                <h4>Average Price of an Order:</h4>
                <br />
                <div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <b class="fs-1"> @ViewBag.AveragePriceOfAnOrder SMACKAROOS</b>
                </div>
            </div>
        </div>
    </div>
</div>
